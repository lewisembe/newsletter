# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-YOUR_API_KEY_HERE

# LLM Models per stage
MODEL_RANKER=gpt-4o-mini
MODEL_CLASSIFIER=gpt-4o-mini
MODEL_VALIDATOR=gpt-4o-mini
MODEL_WRITER=gpt-4o
MODEL_URL_FILTER=gpt-4o-mini

# Selenium Configuration
SELENIUM_HEADLESS=true
SELENIUM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
SELENIUM_TIMEOUT=10

# Scroll Configuration
MAX_LINKS_PER_SOURCE=250
# For testing: set to a lower number like 50 to speed up testing
TEST_MAX_RAW_LINKS=

# Pipeline Parameters
MAX_HEADLINES=25
MAX_FULL_ARTICLES=8
RETRY_COUNT=3
RETRY_DELAY=5

# Date Configuration (defaults to today if not set)
# RUN_DATE=2025-11-09

# Database (PostgreSQL)
DATABASE_URL=postgresql://newsletter_user:newsletter_pass@localhost:5432/newsletter_db

# Logging
LOG_LEVEL=INFO

# Newsletter Pipeline Concurrency
NEWSLETTER_EXECUTION_MODE=parallel  # 'sequential' or 'parallel'
NEWSLETTER_MAX_PARALLEL=3           # Maximum parallel newsletter executions (only used in parallel mode)
